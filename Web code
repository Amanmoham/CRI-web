      <script>
        function dropDown() {
            var x = document.getElementById("dropdownClick");
            if(x.className === "topnav"){
                x.className += " responsive";
                console.log("Navbar is Open");
            }
            else{
                x.className = "topnav";
                console.log("Navbar is Closed");
            }
        }
    </script>  

